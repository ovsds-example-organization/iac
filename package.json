{
  "private": true,
  "name": "yacloud-terraform",
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "hooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint"
  },
  "lint-staged": {
    "*.{md,yaml,json,js}": [
      "prettier --check"
    ],
    "*.tf": [
      "task terraform -- fmt -check"
    ]
  },
  "scripts": {
    "prepare-husky": "husky install"
  }
}
